<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor de la imagen de perfil y la información del usuario -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewInsigniasButton"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/profileImageProf"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/circular_border"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_default"/>

        <!-- Información del usuario (Nombre, Nivel, Rank) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/profileImageProf"
            app:layout_constraintTop_toTopOf="@id/profileImageProf"
            app:layout_constraintBottom_toBottomOf="@id/profileImageProf">

            <TextView
                android:id="@+id/userNameProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evan Peters"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/userLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel 2"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/userRankProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank #1"
                android:textSize="16sp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Botón de Ver Insignias -->
    <Button
        android:id="@+id/viewInsigniasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Insignias"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Título de la tabla de clasificaciones -->
    <TextView
        android:id="@+id/classificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabla de clasificaciones: Guatexploradores"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#00A651"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/viewInsigniasButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <!-- RecyclerView para mostrar la tabla de usuarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/classificationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
